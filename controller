$(document).ready(readyCallback);

function readyCallback()
{
	$("#beautify").click(
	  function()
	  {
	     var inputvalue = $("#inputtext").val();
	     if( !(typeof inputvalue === 'undefined' || inputvalue==="" || inputvalue === null) )
	     {
	        var beautify = BeautifyJSON(inputvalue);
	        $("#outputtext").val(beautify);
	     }
	  }
	);
}